# NASA API Configuration
# Get your API key from https://api.nasa.gov/
NASA_API_KEY=DEMO_KEY
NASA_BASE_URL=https://api.nasa.gov/DONKI

# Stock API Configuration
# Options: yahoo, alphavantage, finnhub
STOCK_API_PROVIDER=yahoo
STOCK_API_KEY=

# Alternative Stock API Keys (optional)
# Alpha Vantage: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=
# Finnhub: https://finnhub.io/register
FINNHUB_API_KEY=

# Caching Configuration
# Revalidation interval in seconds (default: 1800 = 30 minutes)
CACHE_REVALIDATION_INTERVAL=1800

# Development Settings
# Set to true to use sample data instead of real API calls
ENABLE_SAMPLE_DATA=false
